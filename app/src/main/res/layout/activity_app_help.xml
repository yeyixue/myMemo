<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".AppHelpActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="返回主页" />
        <!-- 顶部标题栏 -->
        <TextView
            android:id="@+id/tv_help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用帮助"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- 每个问题条目 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 备忘录内容的隐私能得到保障吗？"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备忘录内容仅保存在手机本地，将会通过加密的方式上传至云端服务器，服务器无法查看用户身份，任何人无法读取备忘内容。"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 保存了的备忘会丢失吗？"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备忘录数据默认保存在本地，将来会在云端服务器多副本持久化保障数据不丢失。"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. 备忘录的内容只能在手机上查看吗？"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无论在哪台设备（手机、电脑、平板）登录，只要登录的是同一个账号，备忘数据即可同步展示。"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. 备忘录内容的隐私能得到保障吗？"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="在紧急情况下或用户反馈严重问题时，运维系统将唤醒raythcn（密钥系统），工作人员对每一条请求均以最小权限执行审计，并在右上角标注审计优化。"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>




</LinearLayout>