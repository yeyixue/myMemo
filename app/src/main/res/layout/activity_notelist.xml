<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/my_light_primary"/>

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02"
                    android:textColor="#333333"
                    android:textStyle="italic"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_note_title"
                        android:layout_toLeftOf="@id/iv_note_top"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:text="标题1"/>

                    <ImageView
                        android:id="@+id/iv_note_top"
                        android:layout_width="20dp"
                        android:layout_centerVertical="true"
                        android:layout_height="20dp"
                        android:src="@mipmap/image_homezhiding"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>
                
                <TextView
                    android:id="@+id/tv_note_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:text="内容1内容1内容1内容1内容1内容1内容1内容1内容1内容1内容1内容1内容1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_note_create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-6-2"
                        android:textColor="#999999"
                        android:layout_centerVertical="true"
                        android:textSize="10sp" />
                    
                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/baseline_more_horiz_24"/>
                    
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>